    "@types/node": "22.10.3",
    "prettier": "3.4.2",
    "typescript": "5.7.2",
    "vite": "6.0.6",
    "vite-plugin-dts": "4.4.0",
    "vitest": "2.1.8"
  },
  "prettier": "@jvdx/prettier-config",
  "prettierIgnore": [
    "tests/",
    "dist/"
